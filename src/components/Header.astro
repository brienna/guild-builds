---
import Logo from "../components/LogoRound.astro"
import { Icon } from 'astro-icon/components'
---

<header class="link-card">
	<nav class="nav repel">
		<div class="logo-wrapper">
		<a href="https://nytimesguild.org/" class="logo">
			<Logo />
			<span class="sr-only">Times Tech Guild</span>
		</a>

		<h1><a href="https://nytimesguild.org/tech/guild-builds/" class="logo-text">Guild Builds</a></h1>
	</div>
		<a class="donate-link" href="https://www.gofundme.com/f/nyt-tech-strike-fund" target="_blank" rel="noopener">
			<span class="donate-link-text">Donate</span>
			<Icon name="external-link" aria-hidden="true" />
			<span class="sr-only"> opens a new window</span>
		</a>
	</nav>
</header>
<style>
  header {
    background-color: #290e0d;
  }
	.nav {
		padding: 1rem;
		display: flex;
		align-items: center;
		border-bottom: 1px solid #B42F2F;
	}
	.logo-wrapper {
    align-items: center;
		display: flex;
	}
	.logo {
		display: flex;
	}
	.logo-text {
		color: #FFFFFF;
		font-family: "Crimson Pro", serif;
		font-size: clamp(1.5rem, 1.3261rem + 0.8696vw, 2rem);
		font-style: italic;
		font-weight: 800;
		margin-left: 8px;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }
  .logo-text:hover {
    color: #FF4040;
  }
	.donate-link {
		display: flex;
		align-items: center;
		color: #FF4040;
		font-family: "Open Sans", sans-serif;
		font-weight: 600;
		font-size: clamp(1.125rem, 1.038rem + 0.4348vw, 1.375rem);
		text-decoration: none;
		border: 2px solid #FF4040;
		padding: 0.375rem 1rem;
	}

	.donate-link-text {
		color: #FFFFFF;
	}

	[data-icon='external-link'] {
		margin-left: 16px;
		height: 1rem;
		width: 1rem;
		fill: currentColor;
	}

	.donate-link:hover, .donate-link:focus-visible {
		border-color: #FFFFFF;
		outline: none;
		color: #FFFFFF;
		transition: all 0.2s ease-in-out;
	}

	/* @media only screen and (min-width: 600px) {
		.nav {
			flex-direction: row;
			justify-content: space-between;
		}
	} */
</style>
